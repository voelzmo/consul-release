set -e

CONSUL_VERSION=1.4.3
CONSUL_TEMPLATE_VERSION=0.20.0

mkdir -p ${BOSH_INSTALL_TARGET}/bin

unzip consul/consul_${CONSUL_VERSION}_linux_amd64.zip -d ${BOSH_INSTALL_TARGET}/bin
chmod +x ${BOSH_INSTALL_TARGET}/bin/consul

unzip consul/consul-template_${CONSUL_TEMPLATE_VERSION}_linux_amd64.zip -d /tmp/consul-template_${CONSUL_TEMPLATE_VERSION}_linux_amd64
mv /tmp/consul-template_${CONSUL_TEMPLATE_VERSION}_linux_amd64/consul-template ${BOSH_INSTALL_TARGET}/bin/
chmod +x ${BOSH_INSTALL_TARGET}/bin/consul-template

